<%- include ("../partials/header") %> <%- include ("../partials/categories-navbar")%>
    <div class="container">
      <div class="row">
        <div class="col-md-8 m-auto">
          <h1 class="mt-4 mb-4">Sign Up Page</h1>
          <% if(errorOccured) {%>
            <div id="flash-msg" class="alert alert-danger">
              <%=errorMsg %>
            </div>
          <%}%>
          <form action="/users/signup" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="name" class="form-control" name="name" id="name" required />
            </div>
            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" class="form-control" name="email" id="email" required/>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" id="password" required/>
            </div>
            <div class="form-group">
              <label for="password2">Verify Password</label>
              <input type="password" class="form-control" name="password2" id="password2" required/>
            </div>
            <button type="submit" class="btn btn-primary button-style">
              Sign Up
            </button>
            <p class="mt-3">
              <a href="/users/auth/google" class="btn btn-danger"><span class="fa fa-google"></span> Continue with Google</a>
            </p>
          </form>
          <p class="mt-3">
            Already have an account? <a href="/users/signin"> Sign In!</a>
          </p>
        </div>
      </div>
    </div>

    <%- include ("../partials/footer") %>